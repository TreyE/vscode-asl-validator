{
    "name": "vscode-asl-validator",
    "displayName": "Amazon Step Function Workflow Validator",
    "description": "Validate AWS Step Function workflows using asl-validator.",
    "version": "0.1.0",
    "publisher": "TreyE",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:json"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.vscode-asl-validator",
                "title": "Validate AWS Step Function Workflow",
                "category": "Editor"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "resourceLangId == json",
                    "command": "extension.vscode-asl-validator"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "asl-validator": "1.1.1",
        "vscode-json-languageservice": "^3.1.6",
        "vscode-languageserver-types": "^3.12.0"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
