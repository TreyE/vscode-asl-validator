{
    "name": "vscode-asl-validator",
    "displayName": "Amazon Step Function Workflow Validator",
    "description": "Validate AWS Step Function State Machines.",
    "version": "0.1.2",
    "publisher": "TreyECode",
    "repository": "https://github.com/TreyE/vscode-asl-validator",
    "license": "MIT",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Linters"
    ],
    "keywords": [
        "step",
        "function",
        "aws",
        "state",
        "amazon"
    ],
    "activationEvents": [
        "onLanguage:json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.vscode-asl-validator.validate",
                "title": "Validate AWS Step Function Workflow",
                "category": "Editor"
            }
        ]
    },
    "scripts": {
        "pack" : "rm -Rf ./dist && rm -Rf ./out && ./node_modules/.bin/tsc -p tsconfig.package.json && ./node_modules/.bin/webpack --config webpack.config.js",
        "vscode:prepublish": "npm run pack",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "debug": "npm run pack",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/lodash": "^4.14.116",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "ajv": "^6.5.1",
        "asl-validator": "1.1.1",
        "json-source-map": "0.4.0",
        "jsonpath": "^1.0.0",
        "lodash": "^4.14.116",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "vscode-json-languageservice": "^3.1.6",
        "vscode-languageserver-types": "^3.12.0",
        "webpack": "^4.19.1",
        "webpack-cli": "^3.1.0"
    }
}
