{
    "name": "vscode-asl-validator",
    "displayName": "Amazon Step Function Workflow Validator",
    "description": "Validate AWS Step Function State Machines.",
    "version": "0.1.3",
    "publisher": "TreyECode",
    "repository": "https://github.com/TreyE/vscode-asl-validator",
    "license": "MIT",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Linters"
    ],
    "keywords": [
        "step",
        "function",
        "aws",
        "state",
        "amazon"
    ],
    "activationEvents": [
        "onLanguage:json",
        "workspaceContains:**/*.json"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.vscode-asl-validator.validate",
                "title": "Validate AWS Step Function Workflow",
                "category": "Editor"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "asl-validator": "1.1.1",
        "vscode-json-languageservice": "^3.1.6",
        "vscode-languageserver-types": "^3.12.0",
        "json-source-map": "0.4.0",
        "ajv": "^6.5.1",
        "jsonpath": "^1.0.0",
        "lodash": "^4.14.116"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42",
        "@types/lodash": "^4.14.116"
    }
}
